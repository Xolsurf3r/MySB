# For use with easy-rsa version 2.0 and OpenSSL 1.0.0*

# This definition stops the following lines choking if HOME isn't
# defined.
HOME					= <InstallDir>/ssl/CA
RANDFILE				= $ENV::HOME/private/.rand
openssl_conf			= openssl_init

####################################################################
[ openssl_init ]
oid_section				= new_oids
engines					= engine_section

####################################################################
[ ca ]
default_ca				= CA_default					# The default ca section

####################################################################
[ CA_default ]
dir						= <InstallDir>/ssl/CA		# WARNING: if you change that, change the default_keyfile in the [req] section below too
certs 					= $dir/certs
crl_dir 				= $dir/crl
database				= $dir/index.txt
new_certs_dir 			= $dir/newcerts
certificate 			= $dir/certs/cacert.pem
serial					= $dir/serial
crl 					= $dir/crl/cacrl.pem
private_key 			= $dir/private/cakey.pem	# WARNING: if you change that, change the default_keyfile in the [req] section below too
RANDFILE 				= $dir/private/.rand
x509_extensions			= usr_cert
default_days			= 3650
default_crl_days		= 30
default_md				= sha256
preserve				= no
policy					= policy_anything
certopt					= default_ca
email_in_dn				= no
nameopt					= default_ca

####################################################################
[ policy_anything ]
commonName				= supplied
stateOrProvinceName		= supplied
countryName				= supplied
emailAddress			= supplied
organizationName		= supplied
organizationalUnitName	= supplied
localityName			= supplied
name					= supplied

####################################################################
[ usr_cert ]
subjectAltName      	= IP:<ipaddress>
basicConstraints    	= CA:FALSE
nsCertType          	= server
nsComment				= "MySB Generated Certificate"
subjectKeyIdentifier	= hash
authorityKeyIdentifier	= keyid,issuer:always
extendedKeyUsage		= clientAuth
keyUsage				= digitalSignature

####################################################################
# For the CA policy
[ policy_match ]
countryName				= supplied
stateOrProvinceName		= supplied
organizationName		= supplied
organizationalUnitName	= supplied
commonName				= supplied
name					= supplied
emailAddress			= supplied
localityName			= supplied

####################################################################
[ req ]
dir						= <InstallDir>/ssl/CA
default_keyfile			= $dir/key.pem
default_md				= sha256
prompt					= no
subjectKeyIdentifier	= hash
authorityKeyIdentifier	= keyid:always,issuer
string_mask 			= utf8only
basicConstraints		= CA:true
distinguished_name		= req_distinguished_name
default_bits			= 2048
x509_extensions			= v3_ca
req_extensions			= v3_req
policy					= policy_anything

####################################################################
[ req_distinguished_name ]
commonName 				= <servername>
stateOrProvinceName		= FR
countryName				= FR
emailAddress			= admin@localhost
0.organizationName		= MySB
organizationalUnitName	= MySB
name					= MySB
localityName			= Somewhere

####################################################################
[ server ]
basicConstraints=CA:FALSE
nsCertType				= server
nsComment				= "MySB Generated Server Certificate"
subjectKeyIdentifier	= hash
authorityKeyIdentifier	= keyid,issuer:always
extendedKeyUsage		= serverAuth
keyUsage				= digitalSignature, keyEncipherment
subjectAltName			= MySB

####################################################################
[ v3_req ]
basicConstraints		= CA:FALSE
subjectKeyIdentifier	= hash
keyUsage				= nonRepudiation, digitalSignature, keyEncipherment

####################################################################
[ v3_ca ]
basicConstraints		= CA:TRUE
subjectKeyIdentifier	= hash
authorityKeyIdentifier	= keyid:always,issuer:always

####################################################################
[ crl_ext ]
authorityKeyIdentifier	= keyid:always,issuer:always

